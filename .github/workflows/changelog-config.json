{
  "categories": [
    {
      "title": "## ğŸš€ Nuevas funcionalidades",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## ğŸ› Correcciones de errores",
      "labels": ["fix", "bug"]
    },
    {
      "title": "## ğŸ“ DocumentaciÃ³n",
      "labels": ["documentation"]
    },
    {
      "title": "## ğŸ§° Mantenimiento",
      "labels": ["chore", "dependencies"]
    }
  ],
  "template": "#{{CHANGELOG}}\n\n<details>\n<summary>Commits</summary>\n\n#{{COMMITS}}\n</details>",
  "pr_template": "- #{{TITLE}} (#{{NUMBER}})",
  "empty_template": "- No hay cambios en esta versiÃ³n",
  "label_extractor": [
    {
      "pattern": "(.) (.+)",
      "target": "$1",
      "on_property": "title"
    }
  ],
  "transformers": [
    {
      "pattern": "[\\-\\*] (\\[(...|TEST|CI|SKIP)\\])( )?(.+)",
      "target": "- $4"
    },
    {
      "pattern": "[\\-\\*] (\\[(...|feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)\\])( )?(.+)",
      "target": "- $4"
    }
  ],
  "duplicate_filter": {
    "pattern": "(.+)",
    "on_property": "title"
  },
  "sort": {
    "order": "ASC",
    "on_property": "mergedAt"
  },
  "base_branches": ["main"]
}